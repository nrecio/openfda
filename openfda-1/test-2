import http.client
import json

cabeceras = {"User-Agent" : "http.client"}

conexion = http.client.HTTPSConnection("api.fda.gov")
conexion.request("GET", "/drug/label.json?limit=10", None, cabeceras)#Aqui incluimos la modificación para que nos de la información requerida de 10 medicamentos.
respuesta1 = conexion.getresponse()
print(respuesta1.status, respuesta1.reason)
metadatos = respuesta1.read().decode("utf-8")
conexion.close()

datos = json.loads(metadatos)
#A continuación iteramos sobre todos los datos obtenidos de la página e imprimimos por pantalla el identificador de los diez medicamentos solicitados.
for i in range(len (datos['results'])):
    medicamento_info=datos['results'][i]

    print ('El identificador es: ',medicamento_info['id'])

#Este programa es una modificación del anterior para que te de el identificador de 10 medicamentos diferentes, no solo uno.